      "name": "Launch server.js via nodemon",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        
      ],
      "protocol": "inspector",
      "program": "${workspaceRoot}/app.js",
      "restart": true,
      
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
